<div class="chat-header">
  <div class="header-title">
    hogefuga
  </div>
  <div class="header-button">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="messages">
  <% 2.times do %>
    <div class="message">
      <div class="name-date">
        <p class="name"><%= "Tom"%></p>
        <p class="date-time"><%= "2020/3/31(Wed) 12:43:30" %></p>
      </div>
      <p class="post-message"><%= "おはよう" %></p>
    </div>
  <% end %>
</div>

<div class="form">
  <div class="form-input">
    <input type="text" placeholder="type a message" class="form-message"> 
    <label class="form-image">
      <span class="image-file">画像</span>
      <input type="file" class="hidden">
    </label>
  </div>
  <input type="submit" value="送信" href="#" class="form-submit">
</div>